<% link_to root_path, :class=> 'shadable', :id=>'logo' do %>
  <%= image_tag '/images/captions/logo.png', :alt =>'Studio DAS' %>
<% end %>
<div id='mainHeader' class = 'wide' >
  <%= image_tag '/images/captions/studioTitle.png', :alt =>'Студия'%><br />
  <%= image_tag '/images/captions/comment.png', :alt =>'Группа молодых дизайнеров', :id=>'comment' %>
</div>  

<div id='content'>
<h2> Изменение данных архитектора</h2>
<% form_for @user, :url => user_path, :html => { :multipart => true } do |form| %>
<center>
<table  id='formTable'>

  <tr><td colspan=2>
  
  <%= form.error_messages %>
  </td></tr>

  <tr><td  colspan=2 align=center>
  
  <% if current_user.is_admin %>
  
  <% unless @user.first.position == @user.position %> 
    <%= link_to "<<", { :action =>'move', :method => 'move_to_top', :id => @user.id } %> |
    <%= link_to "<", { :action => 'move', :method => 'move_higher', :id => @user.id } %> 
  <% end %> 

  Номер:
  <%=h @user.position %>

  <% unless @user.last? %> 
    <%= link_to ">", { :action => 'move', :method => 'move_lower', :id => @user.id } %> |
    <%= link_to ">>", { :action => 'move', :method => 'move_to_bottom', :id => @user.id } %> 
  <% end %>
  
  <% end %>
  </td></tr>

  <%= render :partial => "form", :object => form %>
  
 </table>
 <br>
  <%= form.submit "Обновить данные" %>
  </center>
<% end %>
 


</div>